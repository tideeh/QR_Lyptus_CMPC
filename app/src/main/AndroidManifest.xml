<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.com.polenflorestal.qrcodecmpc">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <application
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:name=".MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_my_cmpc_1"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_my_cmpc_1_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Croqui">
        </activity>
        <activity android:name=".ExibeArvore" />
        <activity
            android:name=".QRScanner"
            android:screenOrientation="portrait"
            tools:ignore="LockedOrientationActivity" />
        <activity android:name=".MainActivity" />
        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyFullScreen"
            tools:ignore="LockedOrientationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>